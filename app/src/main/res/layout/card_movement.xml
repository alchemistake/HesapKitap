<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <view android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          class="android.support.v7.widget.CardView" android:id="@+id/view" android:layout_gravity="center_horizontal"
          android:padding="10dp" android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp" android:layout_marginTop="1dp" android:layout_marginBottom="1dp">
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:padding="15dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Haraket AdÄ±"
                    android:id="@+id/name"
                    android:layout_centerInParent="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0000"
                    android:id="@+id/outcome"
                    android:layout_alignParentStart="true" android:layout_centerVertical="true"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0000"
                    android:id="@+id/income"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
        </RelativeLayout>
    </view>
</LinearLayout>